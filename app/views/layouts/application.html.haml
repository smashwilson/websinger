!!! 5
%html
  %head
    %title Websinger
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag 'application.css'
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery-ui-1.8.7.custom.min.js'
    = javascript_include_tag 'autocomplete-rails.js'
    = csrf_meta_tag
    = yield :head
  %body
    .heading
      = render :partial => 'players/control'
      .panel
        = image_tag '/images/websinger-logo.png', :alt => 'Websinger', :size => '250x60'
        %ul.navigation
          %li= link_to 'playlist', playlist_path
          %li= link_to 'browse', tracks_path
    .status#success
    .status#failure
    .content
      = yield
