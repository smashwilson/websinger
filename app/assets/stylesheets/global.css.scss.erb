$heading: 120px;

$headingpad: 20px;
$headingheight: $heading - (2 * $headingpad);

@mixin replace-image($url, $width, $height) {
  display: inline-block ;
  background: $url no-repeat ;
  text-indent: -9999px ;
  overflow: hidden ;
  height: $height ;
  width: $width ;
}

/* Globally applicable styles */

* {
  font-family: sans-serif ;
  margin: 0 ;
  padding: 0 ;
}

.heading {
  position: fixed ;
  top: 0 ;
  left: 0 ;
  right: 0 ;
  height: $headingheight ;
  padding: $headingpad 5% ;
  background: #fff ;
  border-bottom: outset 2px gray ;
  
  .panel {
    width: 30% ;
    text-align: center ;
    ul.navigation {
      padding-left: 70px ;
      list-style: none ;
      li {
        margin: 0 5px ;
        display: inline ;
      }
    }
  }
}

.content {
  margin-top: $heading ;
  padding: 1em 5% 0 ;
  
  h2 {
    color: #888 ;
    font-size: 200% ;
    font-weight: normal ;
    font-style: italic ;
    font-variant: small-caps ;
    letter-spacing: 4px ;
    margin: 0.5em 0 0.5em -1em ;
  }
}

/* AJAX status */

.status {
  position: absolute ;
  left: 5% ;
  right: 5% ;
  bottom: 5% ;
  border: 2px outset ;
  font-weight: bold ;
  text-align: center ;
  padding: 10px 4% ;
  display: none ;
}

#success {
  color: #030 ;
  border-color: green ;
  background-color: #cfc ;
}

#failure {
  display: none ;
  color: darken(red, 30%) ;
  border-color: red ;
  background-color: lighten(red, 40%) ;
}

/* Player */

.player {
  width: 70% ;
  float: right ;

  .disable { display: none !important }
  
  .error {
    position: absolute ;
    right: 7% ;
    color: darken(red, 30%) ;
    border: 2px outset red ;
    padding: 2px 5px ;
    background-color: lighten(red, 40%) ;
  }
  
  .controls {
    font-size: 110% ;
    float: left ;
    width: 20% ;
    padding: 5px ;
    
    #command_play {
      @include replace-image(image-url('button-play.png'), 50px, 50px);
    }
    .submitted#command_play {
      @include replace-image(image-url('button-play-submitted.png'), 50px, 50px);
    }
    
    #command_pause {
      @include replace-image(image-url('button-pause.png'), 50px, 50px);
    }
    .submitted#command_pause {
      @include replace-image(image-url('button-pause-submitted.png'), 50px, 50px);
    }
    
    #command_stop {
      @include replace-image(image-url('button-stop.png'), 50px, 50px);
    }
    .submitted#command_stop {
      @include replace-image(image-url('button-stop-submitted.png'), 50px, 50px);
    }
  }
  
  .track {
    font-size: 110% ;
    margin-left: 1em ;
    padding: 5px ;
    background: none ;
  }
  
  .progress {
    clear: both ;
    position: relative ;
    font-weight: bold ;
    text-align: center ;
    background: white ;
    margin: 5px ;
    border: inset 2px gray ;
    .bar {
      position: absolute ;
      left: 0 ;
      top: 0 ;
      bottom: 0 ;
      background: #ddf ;
      z-index: 1 ;
    }
    span {
      position: relative ;
      z-index: 2 ;
    }
  }
}

/* Tracks */

.tracks li, .playlist li , .track {
  background: #ddf ;
  padding: 3px 10px ;
  margin: 2px 0 ;
  list-style: none ;
  font-size: 90% ;

  span.artist {
    margin-right: 4px ;
  }
  
  span.title {
    font-weight: bold ;
    margin-right: 4px ;
  }
  
  span.track-number {
    margin-right: 2px ;
  }
  
  a.album {
    font-style: italic ;
    margin-right: 2px ;
  }
}
